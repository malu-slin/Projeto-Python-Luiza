class ContaBancaria:
    """Classe que representa uma conta banc√°ria"""
    
    def __init__(self, titular, numero_conta, saldo_inicial=0):
        """Inicializa uma conta banc√°ria
        
        Args:
            titular (str): Nome do titular da conta
            numero_conta (str): N√∫mero identificador da conta
            saldo_inicial (float): Saldo inicial da conta (padr√£o: 0)
        """
        self.titular = titular
        self.numero_conta = numero_conta
        self.saldo = saldo_inicial
        self.historico = []
        
        if saldo_inicial > 0:
            self.historico.append(f"Conta criada com saldo inicial: R$ {saldo_inicial:.2f}")
    
    def depositar(self, valor):
        """Realiza um dep√≥sito na conta
        
        Args:
            valor (float): Valor a depositar
            
        Returns:
            bool: True se depositado com sucesso, False caso contr√°rio
        """
        if valor <= 0:
            print("‚ùå Erro: O valor do dep√≥sito deve ser positivo!")
            return False
        
        self.saldo += valor
        self.historico.append(f"Dep√≥sito: +R$ {valor:.2f}")
        print(f"‚úÖ Dep√≥sito de R$ {valor:.2f} realizado com sucesso!")
        return True
    
    def sacar(self, valor):
        """Realiza um saque da conta
        
        Args:
            valor (float): Valor a sacar
            
        Returns:
            bool: True se sacado com sucesso, False caso contr√°rio
        """
        if valor <= 0:
            print("‚ùå Erro: O valor do saque deve ser positivo!")
            return False
        
        if valor > self.saldo:
            print(f"‚ùå Erro: Saldo insuficiente! Saldo dispon√≠vel: R$ {self.saldo:.2f}")
            return False
        
        self.saldo -= valor
        self.historico.append(f"Saque: -R$ {valor:.2f}")
        print(f"‚úÖ Saque de R$ {valor:.2f} realizado com sucesso!")
        return True
    
    def consultar_saldo(self):
        """Exibe o saldo atual da conta
        
        Returns:
            float: Saldo atual
        """
        print(f"\n{'='*40}")
        print(f"Titular: {self.titular}")
        print(f"N√∫mero da Conta: {self.numero_conta}")
        print(f"Saldo Atual: R$ {self.saldo:.2f}")
        print(f"{'='*40}\n")
        return self.saldo
    
    def ver_historico(self):
        """Exibe o hist√≥rico de transa√ß√µes"""
        print(f"\n{'='*40}")
        print(f"Hist√≥rico de Transa√ß√µes - {self.titular}")
        print(f"{'='*40}")
        
        if not self.historico:
            print("Nenhuma transa√ß√£o registrada.")
        else:
            for i, transacao in enumerate(self.historico, 1):
                print(f"{i}. {transacao}")
        
        print(f"{'='*40}\n")
    
    def transferir(self, conta_destino, valor):
        """Realiza uma transfer√™ncia para outra conta
        
        Args:
            conta_destino (ContaBancaria): Conta de destino
            valor (float): Valor a transferir
            
        Returns:
            bool: True se transferido com sucesso, False caso contr√°rio
        """
        if valor <= 0:
            print("‚ùå Erro: O valor da transfer√™ncia deve ser positivo!")
            return False
        
        if valor > self.saldo:
            print(f"‚ùå Erro: Saldo insuficiente! Saldo dispon√≠vel: R$ {self.saldo:.2f}")
            return False
        
        self.saldo -= valor
        conta_destino.saldo += valor
        
        self.historico.append(f"Transfer√™ncia enviada para {conta_destino.titular}: -R$ {valor:.2f}")
        conta_destino.historico.append(f"Transfer√™ncia recebida de {self.titular}: +R$ {valor:.2f}")
        
        print(f"‚úÖ Transfer√™ncia de R$ {valor:.2f} para {conta_destino.titular} realizada com sucesso!")
        return True


# ====== EXEMPLO DE USO ======

if __name__ == "__main__":
    # Criando duas contas
    conta_maria = ContaBancaria("Maria Silva", "123456", 1000)
    conta_joao = ContaBancaria("Jo√£o Santos", "654321", 500)
    
    print("\nüè¶ === SISTEMA BANC√ÅRIO SIMPLES ===\n")
    
    # Opera√ß√µes com a conta da Maria
    print("--- Opera√ß√µes com a conta de Maria ---")
    conta_maria.consultar_saldo()
    conta_maria.depositar(500)
    conta_maria.sacar(200)
    conta_maria.consultar_saldo()
    
    # Opera√ß√µes com a conta do Jo√£o
    print("--- Opera√ß√µes com a conta de Jo√£o ---")
    conta_joao.consultar_saldo()
    conta_joao.depositar(300)
    
    # Transfer√™ncia entre contas
    print("--- Transfer√™ncia entre contas ---")
    conta_maria.transferir(conta_joao, 150)
    
    # Consultando saldos finais
    print("--- Saldos Finais ---")
    conta_maria.consultar_saldo()
    conta_joao.consultar_saldo()
    
    # Hist√≥rico de transa√ß√µes
    print("--- Hist√≥rico de Transa√ß√µes ---")
    conta_maria.ver_historico()
    conta_joao.ver_historico()